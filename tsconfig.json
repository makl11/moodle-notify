{
	"extends": "@tsconfig/node12/tsconfig.json",

	"compilerOptions": {
		"preserveConstEnums": true,
		"removeComments": true,
		"sourceMap": true,
		"allowJs": false,
		"outDir": "dist",
		"target": "ES6"
	},

	"include": ["src/**/*", "@types/**/*.d.ts"],
	"exclude": ["node_modules", "dist", "**/*.spec.ts"]
}
